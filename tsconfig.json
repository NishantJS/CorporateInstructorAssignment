{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["routes", "app.ts", "auth", "custom"]
}
